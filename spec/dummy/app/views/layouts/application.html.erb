<!DOCTYPE html>
<html>
<head>
  <title>Dummy</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <% if private_user_signed_in? %>
    Signed in as <%= current_private_user.email %>
    <%= link_to 'Sign out', instance_manager.destroy_private_user_session_path, method: :delete %>
  <% else %>
    <%= link_to 'Sign in', instance_manager.new_private_user_session_path %>
  <% end %>

  <br><br>

  <% flash.each do |k,v| %>
    <div class='flash <%= k %>'><%= v %></div>
  <% end %>

  <%= yield %>

</body>
</html>
